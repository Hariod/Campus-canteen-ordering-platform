/* 下面是tobar */
page {
  background: #f5f5f5;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.big_big_content {
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 40px;
}
.container{
  width:94%;
}
swiper{
  margin-top: 10PX;
  background-color: white;
  padding: 0 10px;
  height:200px;
}
.first-swiper-item>view{
  padding: 10px 0;
  border-bottom:1px solid #ccc;
   display: flex;
  flex-direction:row;
  align-items: center;
}
.twice-swiper-item>view{
  padding: 10px 0;
  border-bottom:1px solid #ccc;
}
swiper-item>view>image{
  width:16px;
  height: 16px;
}
.time-phone{
 display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
}
.time-phone>view{
  width:50%;
  border-right:1px solid #ccc;
}
.time-phone>view>view{
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
}
.time-phone>view image{
  width: 14px;
  height: 14px;
}
.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color:white;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 25%;
  color: #777;
  border-bottom: 0rpx;
}

.on {
  color: #34AAFF;
  border-bottom: 2rpx solid #34AAFF;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}
.detail_center{
  margin-top:10px;
  background: white;
  padding: 0 10px;
  margin-bottom:60px;
}
.store_name{
  padding: 10px 0;
  border-bottom: 1px solid #999;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content:baseline;
}
.store_smallimg{
  width: 20px;
  height: 20px;
  margin-right: 10px;
}
.order_content_detail{
  background: white;
  padding:10px 0;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
}
.discount{
  border-bottom: 1px solid #ccc;
  padding:10px 0;
  display: flex;
  flex-direction:row;
  align-items: center;
  font-size: 36rpx;
  justify-content: space-between;
  color:red;
}
.summarize{
  font-size: 36rpx;
  padding:15px 0;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
}
.summarize view image{
  width:18px;
  height: 18px;
}
.summarize view{
  display: flex;
  flex-direction:row;
  align-items: center;
}
.submit {
  position: fixed;
  bottom: 0;
  height: 50px;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #13d15c;
  text-align: center;
  color: white;
}

.submit_font {
  /* border: 2px solid red; */
  font-size: 18px;
margin: auto;
  display: flex;
  flex-direction: row;
  text-align: center;
  /* justify-content:space-around; */
}

/* 新增的内容 */
.order {
  /* margin-top: 10px; */
  /* position: absolute; */
  display:flex;
  flex-direction: column;
  width: 100%;
  font-family: "微软雅黑";
 
}
.order_nav {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
  font-size: 15px;
  border-bottom: 2px dashed black;
}

.order_list {
  width: 100%;
  height: 100%;
  /* border: 2px dashed  black; */
}
.list {
  /* height: 300px; */
  position: relative;
  margin-top: 15px;
  margin-bottom: 0px;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;

  overflow-y: scroll;
}
.list .item {
  flex-direction: row;
  display: flex;
  color: #333;
  font-size: 36rpx;
  padding: 5px 5px;
}
.list .item .name {

  width: 120%;
  font-size: 15px;
  flex: 3;
  text-align:left;
 
margin-left: 15px;
}

.list .item .num {
  flex: 2;
  width: 50rpx;
  text-align: center;
  margin: 0 5rpx;
}
.order_list_price {
  display: flex;
  flex-direction: row;
  flex: 2;
  font-size: 15px;
}
.per_symble {
  flex: 1;
  text-align: center;
  color: red;
}
.per_price {
  flex: 1;
  margin-left: -10px;
  color: red;
}
.line {
  border-top: 2px dashed black;
}

.footer {

  display: flex;
  flex-direction: row;
}

.cost {
  margin-left: 10px;
  flex: 1;
  margin-top: 20px;
  font-size: 16px;
  margin-bottom: 20px;
}

.cost_total {
  position: absolute;
  right: 20px;
  flex: 1;
  margin-top: 20px;
  font-size: 16px;
  margin-bottom: 20px;
}

.cost_total span {
  color: red;
  margin-left: 5px;
  justify-content: space-around;
}
/* 下划线样式 */
.line-c {
  display: flex;
  align-items: center;
  height: 40rpx;
  background-color: white;
  justify-content: space-between;
  width: 100%;
}
.line-c .l{
  width: 20rpx;
  height: 40rpx;
  border-radius: 0 20rpx 20rpx 0;
}
.line-c .line{
  flex: 1;
  height: 2rpx;
  margin: 0 12rpx;
}
.line-c .r{
  width: 20rpx;
  height: 40rpx;
  border-radius: 20rpx 0 0 20rpx;
}