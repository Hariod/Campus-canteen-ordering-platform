/* 下面是tobar */
page {
  background: #f5f5f5;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.big_big_content {
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 40px;
}
.container{
  width:94%;
}
swiper{
  margin-top: 10PX;
  background-color: white;
  padding: 0 10px;
  height:200px;
}
.first-swiper-item>view{
  padding: 10px 0;
  border-bottom:1px solid #ccc;
   display: flex;
  flex-direction:row;
  align-items: center;
}
.twice-swiper-item>view{
  padding: 10px 0;
  border-bottom:1px solid #ccc;
}
swiper-item>view>image{
  width:16px;
  height: 16px;
}
.time-phone{
 display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
}
.time-phone>view{
  width:50%;
  border-right:1px solid #ccc;
}
.time-phone>view>view{
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
}
.time-phone>view image{
  width: 14px;
  height: 14px;
}
.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color:white;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 25%;
  color: #777;
  border-bottom: 0rpx;
}

.on {
  color: #34AAFF;
  border-bottom: 2rpx solid #34AAFF;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}
.detail_center{
  margin-top:10px;
  background: white;
  padding: 0 10px;
  margin-bottom:60px;
}
.store_name{
  padding: 10px 0;
  border-bottom: 1px solid #999;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content:baseline;
}
.store_smallimg{
  width: 20px;
  height: 20px;
  margin-right: 10px;
}
.order_content_detail{
  background: white;
  padding:10px 0;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
}
.discount{
  border-bottom: 1px solid #ccc;
  padding:10px 0;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
  color:red;
}
.summarize{
  padding:15px 0;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
}
.summarize view image{
  width:18px;
  height: 18px;
}
.summarize view{
  display: flex;
  flex-direction:row;
  align-items: center;
}
.submit {
  position: fixed;
  bottom: 0;
  height: 50px;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #13d15c;
  text-align: center;
  color: white;
}

.submit_font {
  /* border: 2px solid red; */
  font-size: 18px;
margin: auto;
  display: flex;
  flex-direction: row;
  text-align: center;
  /* justify-content:space-around; */
}