/* pages/order/order_detail/order_detail.wxss */
page {
  background: #f5f5f5;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.container{
   width:94%;
}
.store_bigimg{
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin-bottom: 8px;
}
.detail_top{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background: white;
  padding:20px;
  margin-top: 10px;
  font-size: 20px;
}
.detail_center{
  margin-top:10px;
  background: white;
  padding: 0 10px;
}
.store_name{
  padding: 10px 0;
  border-bottom: 1px solid #999;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content:baseline;
}
.store_smallimg{
  width: 20px;
  height: 20px;
  margin-right: 10px;
}
.order_content_detail{
  background: white;
  padding:10px 0;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
}
.discount{
  border-bottom: 1px solid #ccc;
  padding:10px 0;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
  color:red;
}
.summarize{
  padding:15px 0;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
}
.summarize view image{
  width:18px;
  height: 18px;
}
.summarize view{
  display: flex;
  flex-direction:row;
  align-items: center;
}
.distribution_information{
  margin-top:10px;
  background: white;
  padding:0 0 0 10px;
}
.di_header{
  border-bottom: 1px solid #999;
  padding:10px 0;
}
.di_content{
  /* padding:10px 0; */
   border-bottom: 1px solid #ccc;
   font-size: 14px;
  color: #555;
}
.delivery_address{
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  padding:10px 0;
}
.address_right{
  display: flex;
  flex-direction:column;
  align-items:flex-start;
  padding-right: 10px;
}
.address_left{
 width:290rpx;
}
.order_information{
  padding: 0 0 0 10px;
  background: white;
  margin: 10px 0;
}
.oi_header{
  padding:10px 0;
  border-bottom: 1px solid #999;
}
.oi_content view{
  border-bottom:1px solid #ccc;
  padding: 10px 0;
  font-size: 14px;
  color: #555;
}

